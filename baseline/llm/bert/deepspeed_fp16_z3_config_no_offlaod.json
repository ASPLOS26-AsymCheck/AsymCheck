{
  "train_batch_size": 4,
  "train_micro_batch_size_per_gpu": 1,
  "steps_per_print": 100,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 3e-5,
      "weight_decay": 0.0,
      "bias_correction": false
    }
  },
  "zero_optimization": {
    "stage": 3,
    "offload_optimizer": {
      "device": "cpu", 
      "pin_memory": true
    },
    "overlap_comm": true,
    "allgather_partitions": true,
    "allgather_bucket_size": 5e8
  },
  "zero_allow_untested_optimizer": true,

  "gradient_accumulation_steps": 1, 

  "gradient_clipping": 1.0,
  "fp16": {
    "enabled": true
  }
}









